{
  "name": "vdx",
  "version": "0.0.1",
  "description": "An intuitive CLI for processing video and audio, powered by FFmpeg.",
  "author": "Lim Yuan Qing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/vdx.git"
  },
  "main": "src",
  "bin": {
    "vdx": "src/cli/index.js"
  },
  "dependencies": {
    "execa": "^0.10.0",
    "glob": "^7.1.2",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.1",
    "nopt": "^4.0.1",
    "ora": "^2.1.0",
    "p-all": "^1.0.0",
    "rimraf": "^2.6.2",
    "unique-slug": "^2.0.0",
    "which": "^1.3.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier-standard": "^8.0.1",
    "standard": "^11.0.1"
  },
  "scripts": {
    "clean": "rimraf '*.log' build",
    "fix": "prettier-standard 'src/**/*.js'",
    "lint": "standard 'src/**/*.js'",
    "precommit": "lint-staged",
    "start": "./src/cli/index.js test/fixtures/test.mov --no-audio --speed 2 --resize 240 --output build --trim 2 --no-audio --format gif",
    "start-stdin": "cat test/fixtures/test.mov | ./src/cli/index.js --no-audio --speed 2 --resize 240 --output build --trim 2 --no-audio --format gif"
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "git add"
    ]
  },
  "files": [
    "src"
  ],
  "keywords": [
    "ffmpeg",
    "video",
    "youtube"
  ]
}
